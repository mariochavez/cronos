<h3><%= t('.track_time') %></h3>
<%= form_for track, remote: true, html: { class: 'pure-form pure-form-stacked' } do |form| %>
  <% if track.errors.any? %>
    <div class='error'>
      <p><%= t('.form-error') %></p>
      <ul>
        <% track.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='pure-g track-entry'>
    <%= hidden_field_tag :project_id, project.id %>

    <div class='pure-u-1-4 tasks'>
      <%= form.label :task_id %>
      <%= form.collection_select :task_id, tasks, :id, :name, prompt: true %>
    </div>
    <div class='pure-u-1-3 date'>
      <%= form.label :date %>
      <%= form.date_select :date %>
    </div>
    <div class='pure-u-1-6 time'>
      <%= form.label :time_in_minutes %>
      <%= form.text_field :time_in_minutes %>
    </div>
    <div class='pure-u-1-4 action'>
      <%= form.submit class: 'pure-button pure-button-primary' %>
    </div>
  </div>
<% end %>
